<?xml version="1.0" encoding="UTF-8"?>

<faces-config xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
	version="2.0">

	<application>
		<resource-bundle>
			<base-name>messages</base-name>
			<var>bundle</var>
		</resource-bundle>
		<message-bundle>messages</message-bundle>
	</application>

	<navigation-rule>
		<from-view-id>*</from-view-id>
		
<!-- 		Pessoa -->
		<navigation-case>
			<from-outcome>pessoaCadastroPublico</from-outcome>
			<to-view-id>/pages/pessoa/cadastroPublico.xhtml</to-view-id>
		</navigation-case>
		
<!-- 		Usuario -->
		<navigation-case>
			<from-outcome>usuarioCadastrarPublico</from-outcome>
			<to-view-id>/pages/usuario/usuarioCadastrarPublico.xhtml</to-view-id>
		</navigation-case>
		
		<navigation-case>
			<from-outcome>escolherPerfilLogin</from-outcome>
			<to-view-id>/pages/usuario/escolherPerfilLogin.xhtml</to-view-id>
		</navigation-case>
		
<!-- 		Loja -->
		<navigation-case>
			<from-outcome>gerenciarLojas</from-outcome>
			<to-view-id>/pages/loja/gerenciarLojas.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>cadastrarLoja</from-outcome>
			<to-view-id>/pages/loja/cadastrarLoja.xhtml</to-view-id>
		</navigation-case>
			<navigation-case>
			<from-outcome>extratoPontos</from-outcome>
			<to-view-id>/pages/usuario/extratoPontos.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>listarLojas</from-outcome>
			<to-view-id>/pages/loja/listarLojas.xhtml</to-view-id>
		</navigation-case>
		
		<navigation-case>
			<from-outcome>listarMinhasLojas</from-outcome>
			<to-view-id>/pages/loja/listarMinhas.xhtml</to-view-id>
		</navigation-case>
		
		<navigation-case>
			<from-outcome>campoComNomePessoa</from-outcome>
			<to-view-id>/pages/loja/campoComNomePessoa.xhtml</to-view-id>
		</navigation-case>
		
		<navigation-case>
			<from-outcome>campoComNomeLoja</from-outcome>
			<to-view-id>/pages/loja/campoComNomeLoja.xhtml</to-view-id>
		</navigation-case>
		
<!-- 		Ponto -->
		<navigation-case>
			<from-outcome>fornecerPontos</from-outcome>
			<to-view-id>/pages/ponto/fornecerPontos.xhtml</to-view-id>
		</navigation-case>
		
<!-- 		Rever -->
		<navigation-case>
			<from-outcome>loginUsuario</from-outcome>
			<to-view-id>/pages/public/login.xhtml</to-view-id>
		</navigation-case>
		
		<navigation-case>
			<from-outcome>acessoNegado</from-outcome>
			<to-view-id>/pages/public/accessDenied.xhtml</to-view-id>
		</navigation-case>
		
	</navigation-rule>

</faces-config>
